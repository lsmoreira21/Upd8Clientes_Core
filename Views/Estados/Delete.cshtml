@model Upd8Clientes_Core.Models.Estado

@{
    ViewData["Title"] = "Excluir";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que quer excluir esse estado?</h3>
<div>
    <h4>Estado</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="EstadoId" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> 
        <a class="btn btn-secondary" asp-action="Index">Voltar</a>
    </form>
</div>
